<Defs>
	<ThingDef ParentName="AnimalThingBase">
		<defName>BMT_Cave_Cricket</defName>
		<label>cave cricket</label>
		<description>These crickets live in caves. they are hungry and lay many eggs, but got fast growing insect meat.</description>
		<statBases>
			<MoveSpeed>3.75</MoveSpeed>
			<MarketValue>100</MarketValue>
			<ArmorRating_Blunt>0.35</ArmorRating_Blunt>
			<ArmorRating_Sharp>0.35</ArmorRating_Sharp>
			<ComfyTemperatureMin>-10</ComfyTemperatureMin>
			<ComfyTemperatureMax>50</ComfyTemperatureMax>
			<LeatherAmount>0</LeatherAmount>
		</statBases>
		<tools>
			<li>
				<label>mandibles</label>
				<!-- from Megamantis -->
				<capacities>
					<li>Bite</li>
				</capacities>
				<power>9</power>
				<cooldownTime>2</cooldownTime>
				<linkedBodyPartsGroup>Mouth</linkedBodyPartsGroup>
				<chanceFactor>0.4</chanceFactor>
				<surpriseAttack>
					<extraMeleeDamages>
						<li>
							<def>Stun</def>
							<amount>25</amount>
						</li>
					</extraMeleeDamages>
				</surpriseAttack>
			</li>
			<li>
				<label>head</label>
				<capacities>
					<li>Blunt</li>
				</capacities>
				<power>6</power>
				<cooldownTime>2</cooldownTime>
				<linkedBodyPartsGroup>HeadAttackTool</linkedBodyPartsGroup>
				<ensureLinkedBodyPartsGroupAlwaysUsable>true</ensureLinkedBodyPartsGroupAlwaysUsable>
				<chanceFactor>0.2</chanceFactor>
			</li>
		</tools>
		<comps>
			<li Class="CompProperties_EggLayer">
				<eggFertilizedDef>BMT_EggCaveCricketFertilized</eggFertilizedDef>
				<eggFertilizationCountMax>1</eggFertilizationCountMax>
				<eggLayIntervalDays>10</eggLayIntervalDays>
				<eggProgressUnfertilizedMax>0.5</eggProgressUnfertilizedMax>
				<eggCountRange>1~6</eggCountRange>
			</li>
		</comps>
		<race>
			<body>BeetleLike</body>
			<baseBodySize>0.5</baseBodySize>
			<baseHealthScale>0.5</baseHealthScale>
			<baseHungerRate>0.6</baseHungerRate>
