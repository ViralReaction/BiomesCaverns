	<ThingDef ParentName="EggFertBase">
		<defName>BMT_ChemSnailEggFertilized</defName>
		<label>chem snail egg (fert.)</label>
		<description>A fertilized chem snail egg. If all goes well, it should hatch into a baby snail. ?It can be used as fuel?.</description>
		<graphicData>
			<texPath>Things/Item/Resource/AnimalProductRaw/EggRound</texPath>
			<color>(102,84,49)</color>
			<drawSize>1</drawSize>
		</graphicData>
		<statBases>
			<MarketValue>20.0</MarketValue>
			<DeteriorationRate>0</DeteriorationRate>
		</statBases>
		<comps>
			<li Class="CompProperties_Hatcher">
				<hatcherDaystoHatch>8</hatcherDaystoHatch>
				<hatcherPawn>BMT_ChemSnail</hatcherPawn>
			</li>
		</comps>
	</ThingDef>
	<!--filth / trail -->
	<ThingDef ParentName="BaseFilth">
		<defName>BMT_Trail_Fuel</defName>
		<label>chemfuel trail</label>
		<description>A trail of hardend flammable chemslime left from a chem snail.</description>
		<useHitPoints>true</useHitPoints>
		<statBases>
			<Beauty>-10</Beauty>
			<Cleanliness>-15</Cleanliness>
			<Flammability>2.0</Flammability>
			<MaxHitPoints>150</MaxHitPoints>
		</statBases>
		<graphicData>
			<texPath>Things/Filth/LiquidFuel</texPath>
		</graphicData>
		<filth>
			<ignoreFilthMultiplierStat>true</ignoreFilthMultiplierStat>
			<disappearsInDays>0.1~0.5</disappearsInDays>
			<rainWashes>true</rainWashes>
			<cleaningWorkToReduceThickness>70</cleaningWorkToReduceThickness>
			<canFilthAttach>true</canFilthAttach>
			<cleaningSound>Interact_CleanFilth_Fluid</cleaningSound>
		</filth>
	</ThingDef>
</Defs>
