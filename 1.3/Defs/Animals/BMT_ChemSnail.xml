<?xml version="1.0" encoding="utf-8" ?>
<Defs>
	<ThingDef ParentName="AnimalThingBase">
		<defName>BMT_ChemSnail</defName>
		<label>chem snail</label>
		<description>A smaller snail, found deep underground. These snails are producing Chemfuel and tend leave s flammable ?slime/trail? create a powerful fire-starting explosion when killed.</description>
		<statBases>
			<MoveSpeed>1.2</MoveSpeed>
			<ComfyTemperatureMin>-10</ComfyTemperatureMin>
			<ComfyTemperatureMax>45</ComfyTemperatureMax>
			<MarketValue>100</MarketValue>
		</statBases>
		<comps>
			<li Class="CompProperties_EggLayer">
				<eggFertilizedDef>BMT_ChemSnailEggFertilized</eggFertilizedDef>
				<eggLayIntervalDays>12</eggLayIntervalDays>
				<eggProgressUnfertilizedMax>0.5</eggProgressUnfertilizedMax>
				<eggCountRange>1~2</eggCountRange>
			</li>
			<li Class="CompProperties_Milkable">
				<milkDef>Chemfuel</milkDef>
				<milkIntervalDays>2</milkIntervalDays>
				<milkAmount>4</milkAmount>
				<milkFemaleOnly>false</milkFemaleOnly>
			</li>
			<!-- Sadly does not work as i liked to -->
			<li Class="CompProperties_Spawner">
				<thingToSpawn>Filth_Fuel</thingToSpawn>
				<spawnCount>1</spawnCount>
				<spawnIntervalRange>2000~6000</spawnIntervalRange>
			</li>
		</comps>
		<tools>
			<li>
				<label>head</label>
				<capacities>
					<li>Blunt</li>
				</capacities>
				<power>9</power>
				<cooldownTime>2.5</cooldownTime>
				<linkedBodyPartsGroup>HeadAttackTool</linkedBodyPartsGroup>
				<ensureLinkedBodyPartsGroupAlwaysUsable>true</ensureLinkedBodyPartsGroupAlwaysUsable>
			</li>
			<!-- chemecal burn -->
		</tools>
		<race>
			<herdAnimal>false</herdAnimal>
			<deathActionWorkerClass>DeathActionWorker_SmallExplosion</deathActionWorkerClass>
			<canBePredatorPrey>false</canBePredatorPrey>
			<body>BiomesCore_Snail</body>
			<baseHungerRate>0.22</baseHungerRate>
			<baseBodySize>0.2</baseBodySize>
			<baseHealthScale>0.4</baseHealthScale>
			<foodType>VegetarianRoughAnimal</foodType>
			<wildness>0.75</wildness>
			<lifeExpectancy>8</lifeExpectancy>
			<trainability>None</trainability>
			<manhunterOnTameFailChance>0</manhunterOnTameFailChance>
			<manhunterOnDamageChance>0</manhunterOnDamageChance>
			<!-- <meatLabel>snail meat</meatLabel> -->
			<!-- <meatColor>(62,133,215)</meatColor> -->
			<leatherDef>BMT_Snailshell</leatherDef>
			<lifeStageAges>
				<li>
					<def>AnimalBaby</def>
					<minAge>0</minAge>
				</li>
				<li>
					<def>AnimalJuvenile</def>
					<minAge>0.1</minAge>
				</li>
				<li>
					<def>AnimalAdult</def>
					<minAge>0.222</minAge>
				</li>
			</lifeStageAges>
			<soundMeleeHitPawn>Pawn_Melee_BigBash_HitPawn</soundMeleeHitPawn>
			<soundMeleeHitBuilding>Pawn_Melee_BigBash_HitBuilding</soundMeleeHitBuilding>
			<soundMeleeMiss>Pawn_Melee_BigBash_Miss</soundMeleeMiss>
			<wildBiomes>
				<BMT_FungalForest>0.25</BMT_FungalForest>
			</wildBiomes>
		</race>
	</ThingDef>
