<?xml version="1.0" encoding="utf-8" ?>
<Defs>
	<ThingDef ParentName="AnimalThingBase">
		<defName>BMT_GiantSlug</defName>
		<label>giant slug</label>
		<description>A huge slug, found deep underground. These slugs like the pigs of the deep.</description>
		<statBases>
			<MoveSpeed>2.3</MoveSpeed>
			<ComfyTemperatureMin>-10</ComfyTemperatureMin>
			<ComfyTemperatureMax>45</ComfyTemperatureMax>
			<MarketValue>100</MarketValue>
			<ArmorRating_Blunt>0.20</ArmorRating_Blunt>
			<ArmorRating_Sharp>0.20</ArmorRating_Sharp>
		</statBases>
		<comps>
			<li Class="CompProperties_EggLayer">
				<eggFertilizedDef>BMT_GiantSlugEggFertilized</eggFertilizedDef>
				<!-- xeye: should be hermaphroditic, if posible -->
				<eggLayIntervalDays>8</eggLayIntervalDays>
				<eggProgressUnfertilizedMax>0.5</eggProgressUnfertilizedMax>
				<eggCountRange>1~3</eggCountRange>
			</li>
		</comps>
		<tools>
			<li>
				<label>head</label>
				<capacities>
					<li>Blunt</li>
				</capacities>
				<power>13</power>
				<cooldownTime>2.5</cooldownTime>
				<linkedBodyPartsGroup>HeadAttackTool</linkedBodyPartsGroup>
				<ensureLinkedBodyPartsGroupAlwaysUsable>true</ensureLinkedBodyPartsGroupAlwaysUsable>
			</li>
		</tools>
		<race>
			<herdAnimal>false</herdAnimal>
			<body>BiomesCore_Slug</body>
			<baseHungerRate>0.8</baseHungerRate>
			<baseBodySize>1.7</baseBodySize>
			<baseHealthScale>0.7</baseHealthScale>
			<foodType>VegetarianRoughAnimal</foodType> <!-- xeye: could be onivore many slugs and especially snails eat other gastropods eggs. -->
			<wildness>0.75</wildness>
			<lifeExpectancy>12</lifeExpectancy>
			<trainability>None</trainability>
			<manhunterOnTameFailChance>0.02</manhunterOnTameFailChance>
			<manhunterOnDamageChance>0.02</manhunterOnDamageChance>
			<!-- <meatLabel>snail meat</meatLabel> -->
			<!-- <meatColor>(62,133,215)</meatColor> -->
			<!--leatherDef>BMT_SlugMantle</leatherDef--> <!-- or hyponota, could be same as squids, octopuses, nautiluses, Worm like... -->
			<lifeStageAges>
				<li>
					<def>AnimalBaby</def>
					<minAge>0</minAge>
				</li>
				<li>
					<def>AnimalJuvenile</def>
					<minAge>0.1</minAge>
				</li>
				<li>
					<def>AnimalAdult</def>
					<minAge>0.333</minAge>
				</li>
			</lifeStageAges>
			<soundMeleeHitPawn>Pawn_Melee_BigBash_HitPawn</soundMeleeHitPawn>
			<soundMeleeHitBuilding>Pawn_Melee_BigBash_HitBuilding</soundMeleeHitBuilding>
			<soundMeleeMiss>Pawn_Melee_BigBash_Miss</soundMeleeMiss>
		</race>
	</ThingDef>
	<PawnKindDef ParentName="AnimalKindBase">
		<defName>BMT_GiantSlug</defName>
		<label>giant slug</label>
		<race>BMT_GiantSlug</race>
		<combatPower>75</combatPower>
		<ecoSystemWeight>0.8</ecoSystemWeight>
		<wildGroupSize>1~2</wildGroupSize>
		<lifeStages>
			<li>
				<bodyGraphicData>
					<texPath>BMT_Caverns/Things/Animal/GiantSlug/GiantSlug</texPath>
					<drawSize>1.0</drawSize>
					<!-- need texture for size -->
				</bodyGraphicData>
				<dessicatedBodyGraphicData>
					<texPath>BMT_Caverns/Things/Animal/GiantSlug/Dessicated_GiantSlug</texPath>
					<drawSize>1.0</drawSize>
				</dessicatedBodyGraphicData>
			</li>
			<li>
				<bodyGraphicData>
					<texPath>BMT_Caverns/Things/Animal/GiantSlug/GiantSlug</texPath>
					<drawSize>1.5</drawSize>
				</bodyGraphicData>
				<dessicatedBodyGraphicData>
					<texPath>BMT_Caverns/Things/Animal/GiantSlug/Dessicated_GiantSlug</texPath>
					<drawSize>1.5</drawSize>
				</dessicatedBodyGraphicData>
			</li>
			<li>
				<bodyGraphicData>
					<texPath>BMT_Caverns/Things/Animal/GiantSlug/GiantSlug</texPath>
					<drawSize>2</drawSize>
				</bodyGraphicData>
				<dessicatedBodyGraphicData>
					<texPath>BMT_Caverns/Things/Animal/GiantSlug/Dessicated_GiantSlug</texPath>
					<drawSize>2</drawSize>
				</dessicatedBodyGraphicData>
			</li>
		</lifeStages>
	</PawnKindDef>
	<ThingDef ParentName="EggFertBase">
		<defName>BMT_GiantSlugEggFertilized</defName>
		<label>giant slug egg (fert.)</label>
		<description>A fertilized giant slug egg. If all goes well, it should hatch into a baby slug. It can be eaten raw, but it's much better cooked.</description>
		<graphicData>
			<texPath>Things/Item/Resource/AnimalProductRaw/EggRound</texPath>
			<color>(102,84,49)</color>
			<drawSize>1</drawSize>
		</graphicData>
		<statBases>
			<MarketValue>20.0</MarketValue>
			<DeteriorationRate>0</DeteriorationRate>
		</statBases>
		<comps>
			<li Class="CompProperties_Hatcher">
				<hatcherDaystoHatch>8</hatcherDaystoHatch>
				<hatcherPawn>BMT_GiantSlug</hatcherPawn>
			</li>
		</comps>
	</ThingDef>
</Defs>
