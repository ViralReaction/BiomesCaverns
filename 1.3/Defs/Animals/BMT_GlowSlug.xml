<?xml version="1.0" encoding="utf-8" ?>
<Defs>
	<ThingDef ParentName="AnimalThingBase">
		<defName>BMT_GlowSlug</defName>
		<label>glowslug</label>
		<description>A bioluminescent slug, found deep underground.\n\nThis bioluminescent slug is easily spotted in any dark environment, both by its own species and by predators. It is a wonder that it has survived this long, let alone to the large size it is.</description>
		<statBases>
			<MoveSpeed>2.1</MoveSpeed>
			<ComfyTemperatureMin>-10</ComfyTemperatureMin>
			<ComfyTemperatureMax>45</ComfyTemperatureMax>
			<MarketValue>240</MarketValue>
			<ArmorRating_Blunt>0.12</ArmorRating_Blunt>
			<ArmorRating_Sharp>0.30</ArmorRating_Sharp>
		</statBases>
		<comps>
			<li Class="CompProperties_EggLayer">
				<eggUnfertilizedDef>BMT_EggGlowSlugUnfertilized</eggUnfertilizedDef>
				<eggFertilizedDef>BMT_EggGlowSlugFertilized</eggFertilizedDef>
				<eggLayIntervalDays>6</eggLayIntervalDays>
				<eggProgressUnfertilizedMax>0.5</eggProgressUnfertilizedMax>
				<eggCountRange>1~1</eggCountRange>
			</li>
		</comps>
		<tools>
			<li>
				<label>head</label>
				<capacities>
					<li>Blunt</li>
				</capacities>
				<power>7</power>
				<cooldownTime>2</cooldownTime>
				<linkedBodyPartsGroup>HeadAttackTool</linkedBodyPartsGroup>
				<ensureLinkedBodyPartsGroupAlwaysUsable>true</ensureLinkedBodyPartsGroupAlwaysUsable>
			</li>
		</tools>
		<race>
			<herdAnimal>true</herdAnimal>
			<body>BiomesCore_Slug</body>
			<baseHungerRate>0.1</baseHungerRate>
			<baseBodySize>0.4</baseBodySize>
			<baseHealthScale>0.5</baseHealthScale>
			<foodType>VegetarianRoughAnimal</foodType>
			<wildness>0.75</wildness>
			<lifeExpectancy>10</lifeExpectancy>
			<trainability>None</trainability>
			<manhunterOnTameFailChance>0.02</manhunterOnTameFailChance>
			<manhunterOnDamageChance>0.02</manhunterOnDamageChance>
			<!-- <meatLabel>slug meat</meatLabel> -->
			<!-- <meatColor>(62,133,215)</meatColor> -->
			<!--leatherDef>BMT_SlugMantle</leatherDef-->
			<lifeStageAges>
				<li>
					<def>AnimalBaby</def>
					<minAge>0</minAge>
				</li>
				<li>
					<def>AnimalJuvenile</def>
					<minAge>0.12</minAge>
				</li>
				<li>
					<def>AnimalAdult</def>
					<minAge>0.3</minAge>
					<soundWounded>Biomes_GlowSnail_Wounded</soundWounded>
					<soundDeath>Biomes_GlowSnail_Death</soundDeath>
					<soundCall>Biomes_GlowSnail_Call</soundCall>
					<soundAngry>Biomes_GlowSnail_Angry</soundAngry>
				</li>
			</lifeStageAges>
			<soundMeleeHitPawn>Pawn_Melee_BigBash_HitPawn</soundMeleeHitPawn>
			<soundMeleeHitBuilding>Pawn_Melee_BigBash_HitBuilding</soundMeleeHitBuilding>
			<soundMeleeMiss>Pawn_Melee_BigBash_Miss</soundMeleeMiss>
		</race>
	</ThingDef>
