<?xml version="1.0" encoding="utf-8" ?>
<Defs>
	<ThingDef ParentName="BaseInsect">
		<defName>BMT_RoyalRhino</defName>
		<label>royal rhino beetle</label>
		<description>A vary large, subterranean beetle. The royal rhino beetle is gentle by nature, but extremely dangerous when enraged.</description>
		<statBases>
			<MoveSpeed>5</MoveSpeed>
			<ArmorRating_Blunt>0.4</ArmorRating_Blunt>
			<ArmorRating_Sharp>0.6</ArmorRating_Sharp>
			<ArmorRating_Heat>0.3</ArmorRating_Heat>
			<ComfyTemperatureMin>0</ComfyTemperatureMin>
			<MarketValue>500</MarketValue>
		</statBases>
		<uiIconScale>2</uiIconScale>
		<tools>
			<li>
				<label>mandibles</label>
				<capacities>
					<li>Bite</li>
				</capacities>
				<power>10</power>
				<cooldownTime>2</cooldownTime>
				<linkedBodyPartsGroup>Mouth</linkedBodyPartsGroup>
			</li>
			<li>
				<label>horn</label>
				<capacities>
					<li>Scratch</li>
					<li>Stab</li>
				</capacities>
				<power>20</power>
				<cooldownTime>2</cooldownTime>
				<linkedBodyPartsGroup>HornAttackTool</linkedBodyPartsGroup>
				<surpriseAttack>
					<extraMeleeDamages>
						<li>
							<def>Stun</def>
							<amount>20</amount>
						</li>
					</extraMeleeDamages>
				</surpriseAttack>
			</li>
			<li>
				<label>head</label>
				<capacities>
					<li>Blunt</li>
				</capacities>
				<power>4</power>
				<cooldownTime>2</cooldownTime>
				<linkedBodyPartsGroup>HeadAttackTool</linkedBodyPartsGroup>
				<ensureLinkedBodyPartsGroupAlwaysUsable>true</ensureLinkedBodyPartsGroupAlwaysUsable>
				<chanceFactor>0.1</chanceFactor>
			</li>
		</tools>
		<comps>
			<li Class="CompProperties_EggLayer">
				<eggUnfertilizedDef>BMT_EggRoyalRhinoUnfertilized</eggUnfertilizedDef>
				<eggFertilizedDef>BMT_EggRoyalRhinoFertilized</eggFertilizedDef>
				<eggFertilizationCountMax>1</eggFertilizationCountMax>
				<eggLayIntervalDays>10</eggLayIntervalDays>
				<eggProgressUnfertilizedMax>0.5</eggProgressUnfertilizedMax>
				<eggCountRange>1</eggCountRange>
			</li>
		</comps>
		<race>
			<body>BeetleLikeWithHorn</body>
			<baseBodySize>3</baseBodySize>
			<baseHungerRate>0.6</baseHungerRate>
			<baseHealthScale>8</baseHealthScale>
			<leatherDef>BMT_RoyalChitin</leatherDef>
			<foodType>VegetarianRoughAnimal, DendrovoreAnimal</foodType>
			<willNeverEat>
				<li MayRequire="Ludeon.RimWorld.Royalty">Plant_TreeAnima</li>
				<li MayRequire="Ludeon.RimWorld.Ideology">Plant_TreeGauranlen</li>
			</willNeverEat>
			<manhunterOnTameFailChance>0.70</manhunterOnTameFailChance>
			<manhunterOnDamageChance>0.95</manhunterOnDamageChance>
			<useMeatFrom>Megaspider</useMeatFrom>
			<lifeExpectancy>25</lifeExpectancy>
			<wildness>0.95</wildness>
			<trainability>Intermediate</trainability>
			<lifeStageAges>
				<li>
					<def>EusocialInsectLarva</def>
					<minAge>0</minAge>
				</li>
				<li>
					<def>EusocialInsectJuvenile</def>
					<minAge>0.03</minAge>
				</li>
				<li>
					<def>EusocialInsectAdult</def>
					<minAge>0.4</minAge>
					<soundWounded>Pawn_Megascarab_Wounded</soundWounded>
					<soundDeath>Pawn_Megascarab_Death</soundDeath>
					<soundCall>Pawn_Megascarab_Call</soundCall>
					<soundAngry>Pawn_Megascarab_Angry</soundAngry>
				</li>
			</lifeStageAges>
			<soundMeleeHitPawn>Pawn_Melee_BigBash_HitPawn</soundMeleeHitPawn>
			<soundMeleeHitBuilding>Pawn_Melee_BigBash_HitBuilding</soundMeleeHitBuilding>
			<soundMeleeMiss>Pawn_Melee_BigBash_Miss</soundMeleeMiss>
		</race>
		<tradeTags>
			<li>AnimalInsect</li>
			<li>AnimalFighter</li>
			<li>AnimalAlpha</li>
			<li>AnimalExotic</li>
		</tradeTags>
