<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <BiomeDef>
    <defName>BMT_FungalForest</defName>
    <label>fungal forest</label>
    <description>A damp cave system full of fungi</description>
    <workerClass>BiomesCaverns.BiomeWorker_Test</workerClass>
	<modExtensions>
        <li Class="BiomesCore.DefModExtensions.BiomesMap">
			<isCavern>true</isCavern>
			<cavernShapes>
				<li>SmallChambers</li>
			</cavernShapes>
		</li>
	</modExtensions>
    <animalDensity>3.7</animalDensity>
    <plantDensity>0.65</plantDensity>
    <settlementSelectionWeight>0.2</settlementSelectionWeight>
    <movementDifficulty>0.5</movementDifficulty>
    <texture>BMT_Caverns/World/Biomes/FungalForest</texture>
    <forageability>1</forageability>
    <foragedFood>RawBerries</foragedFood>
    <wildPlantRegrowDays>20</wildPlantRegrowDays>
    <soundsAmbient>
      <li>Ambient_NightInsects_Standard</li>
    </soundsAmbient>
    <diseaseMtbDays>40</diseaseMtbDays>
    <diseases>
      <li>
        <diseaseInc>Disease_Flu</diseaseInc>
        <commonality>100</commonality>
      </li>
      <li>
        <diseaseInc>Disease_Plague</diseaseInc>
        <commonality>100</commonality>
      </li>
      <li>
        <diseaseInc>Disease_Malaria</diseaseInc>
        <commonality>100</commonality>
      </li>
      <li>
        <diseaseInc>Disease_GutWorms</diseaseInc>
        <commonality>50</commonality>
      </li>
      <li>
        <diseaseInc>Disease_FibrousMechanites</diseaseInc>
        <commonality>30</commonality>
      </li>
      <li>
        <diseaseInc>Disease_SensoryMechanites</diseaseInc>
        <commonality>30</commonality>
      </li>

      <li>
        <diseaseInc>Disease_MuscleParasites</diseaseInc>
        <commonality>50</commonality>
      </li>
      
      <li>
        <diseaseInc>Disease_AnimalFlu</diseaseInc>
        <commonality>100</commonality>
      </li>
      <li>
        <diseaseInc>Disease_AnimalPlague</diseaseInc>
        <commonality>100</commonality>
      </li>
    </diseases>
	<terrainsByFertility>
      <li>
        <terrain>Soil</terrain>
        <min>-999</min>
        <max>0.87</max>
      </li>
      <li>
        <terrain>SoilRich</terrain>
        <min>0.87</min>
        <max>999</max>
      </li>
    </terrainsByFertility>
    <terrainPatchMakers>
      <li>
        <perlinFrequency>0.035</perlinFrequency>
        <thresholds>
          <li>
            <terrain>SoilRich</terrain>
            <min>0.63</min>
            <max>0.83</max>
          </li>
          <li>
            <terrain>WaterShallow</terrain>
            <min>0.83</min>
            <max>999</max>
          </li>
        </thresholds>
      </li>
	  <li>
        <perlinFrequency>0.03</perlinFrequency>
        <thresholds>
          <li>
            <terrain>MarshyTerrain</terrain>
            <min>0.52</min>
            <max>999</max>
          </li>
        </thresholds>
      </li>
    </terrainPatchMakers>
    <baseWeatherCommonalities>
      <BMT_Calm>18</BMT_Calm>
      <Fog>1</Fog>
      <Rain>2</Rain>
      <DryThunderstorm>1</DryThunderstorm>
      <RainyThunderstorm>1</RainyThunderstorm>
      <FoggyRain>1</FoggyRain>
      <SnowGentle>4</SnowGentle>
      <SnowHard>4</SnowHard>
    </baseWeatherCommonalities>
    <wildPlants>
	<!-- ground cover -->
		<BMT_FloorMold>5.0</BMT_FloorMold>
		<BMT_FruitingBodies>0.5</BMT_FruitingBodies>
		<BMT_Dewshrooms>0.02</BMT_Dewshrooms>
		<BMT_Sagecrust>0.7</BMT_Sagecrust>
		<BMT_RustPuff>0.2</BMT_RustPuff>
		<BMT_Pusmelon>0.1</BMT_Pusmelon>
		
	<!-- mid sized -->
		<!-- <BMT_BleedingTooth>0.2</BMT_BleedingTooth> -->
		
	<!-- trees -->
		<BMT_Spirecap>1.0</BMT_Spirecap>
		
	<!-- other harvestable -->
		<BMT_DulcisPlant>0.02</BMT_DulcisPlant>		<!-- food -->
	
		<BMT_Stimquill>0.005</BMT_Stimquill>		<!-- stimulant drug -->
      
    </wildPlants>

    <wildAnimals>
	<!-- herbivores -->
		<BMT_GiantSnail>0.20</BMT_GiantSnail>
		<BMT_GlowSnail>0.05</BMT_GlowSnail>
		<BMT_MossBeetle>0.15</BMT_MossBeetle>
		<BMT_BovineBeetle>0.1</BMT_BovineBeetle>

	<!-- predators -->
		<BMT_Xyrion>0.05</BMT_Xyrion>
	
    </wildAnimals>
    <allowedPackAnimals>
      <li>Muffalo</li>
      <li>Alpaca</li>
    </allowedPackAnimals>
  </BiomeDef>

</Defs>
