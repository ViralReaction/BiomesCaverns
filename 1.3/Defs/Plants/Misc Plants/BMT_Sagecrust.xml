<?xml version="1.0" encoding="utf-8" ?>
<Defs>	
	
	
    <ThingDef ParentName="BMT_CavePlantBase">
        <defName>BMT_Sagecrust</defName>
        <label>sagecrust</label>
        <description>A tough, leafy lichen that can survive with minimal light.</description>
        <graphicData>
            <texPath>BMT_Caverns/Things/Plant/Sagecrust</texPath>
            <graphicClass>Graphic_Random</graphicClass>
        </graphicData>
        
        <modExtensions>
			<li Class="BiomesCore.DefModExtensions.Biomes_PlantControl">
				<allowInCave>true</allowInCave>
				<allowInBuilding>true</allowInBuilding>
				<growingHours>0.5~0.99</growingHours>
			</li>
		</modExtensions>
        <plant>
             <fertilitySensitivity>0.0</fertilitySensitivity>
			<growDays>3.5</growDays>
			<fertilityMin>0.05</fertilityMin>
			<maxMeshCount>9</maxMeshCount>
			<visualSizeRange>0.2~0.5</visualSizeRange>
			<topWindExposure>0.2</topWindExposure>
			<wildClusterRadius>3</wildClusterRadius>
			<wildClusterWeight>200</wildClusterWeight>
			<wildOrder>1</wildOrder>
        </plant>
    </ThingDef>
</Defs>