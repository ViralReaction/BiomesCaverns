<?xml version="1.0" encoding="utf-8" ?>
<Defs>
	<ThingDef ParentName="BMT_CaveBushBase">
		<defName>BMT_Poptop</defName>
		<label>poptop</label>
		<description>A spongy mushroom over reacting to fire.</description>
		<graphicData>
			<texPath>BMT_Caverns/Things/Plant/Poptop</texPath>
			<graphicClass>Graphic_Random</graphicClass>
		</graphicData>
		<statBases>
			<Nutrition>0.1</Nutrition>
			<Mass>50</Mass>
		</statBases>
		<modExtensions>
			<li Class="BiomesCore.DefModExtensions.Biomes_PlantControl">
				<allowInCave>true</allowInCave>
				<allowInBuilding>true</allowInBuilding>
				<growingHours>0.5~0.99</growingHours>
			</li>
		</modExtensions>
		<plant>
			<fertilitySensitivity>0.3</fertilitySensitivity>
			<growDays>1</growDays>
			<fertilityMin>0.05</fertilityMin>
			<visualSizeRange>0.3~0.7</visualSizeRange>
			<topWindExposure>0.2</topWindExposure>
			<wildClusterRadius>3</wildClusterRadius>
			<wildClusterWeight>10</wildClusterWeight>
			<wildOrder>3</wildOrder>
			<wildEqualLocalDistribution>true</wildEqualLocalDistribution>
			<growMinGlow>0</growMinGlow>
			<growOptimalGlow>0</growOptimalGlow>
			<cavePlant>true</cavePlant>
			<interferesWithRoof>false</interferesWithRoof>
			<!--sowResearchPrerequisites>
				<li>Firefoam</li>
			</sowResearchPrerequisites-->
		</plant>
		<!--minifiedDef>MinifiedTree</minifiedDef-->
		<!--rotatable>false</rotatable-->
		<tickerType>Normal</tickerType>
		<comps>
			<li Class="CompProperties_Explosive">
				<explosiveRadius>9.9</explosiveRadius>
				<explosiveDamageType>Extinguish</explosiveDamageType>
				<startWickHitPointsPercent>-1</startWickHitPointsPercent>
				<startWickOnDamageTaken>
					<li>Flame</li>
				</startWickOnDamageTaken>
				<postExplosionSpawnThingDef>Filth_Water</postExplosionSpawnThingDef>
				<postExplosionSpawnChance>1</postExplosionSpawnChance>
				<postExplosionSpawnThingCount>1</postExplosionSpawnThingCount>
				<applyDamageToExplosionCellsNeighbors>true</applyDamageToExplosionCellsNeighbors>
				<explosionEffect>ExtinguisherExplosion</explosionEffect>
			</li>
			<li Class="CompProperties_UseEffect">
				<compClass>CompUseEffect_StartWick</compClass>
			</li>
			<li Class="CompProperties_ProximityFuse">
				<target>Fire</target>
				<radius>3</radius>
			</li>
		</comps>
	</ThingDef>
</Defs>