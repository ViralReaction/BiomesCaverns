<?xml version="1.0" encoding="utf-8" ?>
<Defs>
	<ThingDef ParentName="BMT_CaveTreeBase">
		<defName>BMT_Skulltop</defName>
		<label>skulltop</label>
		<description>A poisonous mushroom.</description>
		<graphicData>
			<texPath>BMT_Caverns/Things/Plant/Skulltop/Skulltop</texPath>
			<graphicClass>Graphic_Random</graphicClass>
		</graphicData>
		<statBases>
			<Nutrition>1</Nutrition>
			<Mass>50</Mass>
			<Flammability>0.1</Flammability>
		</statBases>
		<modExtensions>
			<li Class="BiomesCore.DefModExtensions.Biomes_PlantControl">
				<allowInCave>true</allowInCave>
				<allowInBuilding>true</allowInBuilding>
			</li>
		</modExtensions>
		<plant>
			<fertilitySensitivity>0.3</fertilitySensitivity>
			<growDays>1</growDays>
			<dieIfLeafless>false</dieIfLeafless>
			<fertilityMin>0.05</fertilityMin>
			<soundHarvesting>Harvest_Standard</soundHarvesting>
			<soundHarvestFinish>Harvest_Standard_Finish</soundHarvestFinish>
			<visualSizeRange>0.3~0.7</visualSizeRange>
			<topWindExposure>0.2</topWindExposure>
			<wildClusterRadius>5</wildClusterRadius>
			<wildClusterWeight>500</wildClusterWeight>
			<wildOrder>2</wildOrder>
			<wildEqualLocalDistribution>false</wildEqualLocalDistribution>
			<neverBlightable>true</neverBlightable>
			<harvestTag Inherit="False"/>
			<harvestedThingDef Inherit="False"/>
			<harvestYield Inherit="False"/>
			<treeLoversCareIfChopped>false</treeLoversCareIfChopped>
			<sowResearchPrerequisites Inherit="False"/>
		</plant>
		<selectable>true</selectable>
		<neverMultiSelect>false</neverMultiSelect>
		<minifiedDef>MinifiedTree</minifiedDef>
		<rotatable>false</rotatable>
		<tickerType>Normal</tickerType>
		<comps>
			<li Class="AnimalBehaviours.CompProperties_GasProducer">
				<gasType>BMT_SkulltopSpore</gasType>
				<rate>0.2</rate>
				<radius>4</radius>
			</li>
		</comps>
	</ThingDef>
	<ThingDef ParentName="BaseGas">
		<defName>BMT_SkulltopSpore</defName>
		<label>poisonous spores</label>
		<graphicData>
			<texPath>Things/Gas/Puff</texPath>
			<drawSize>2.2</drawSize>
			<color>(132,51,170,0.5)</color>
		</graphicData>
		<gas>
			<expireSeconds>10~15</expireSeconds>
			<blockTurretTracking>true</blockTurretTracking>
			<accuracyPenalty>0.7</accuracyPenalty>
			<rotationSpeed>10</rotationSpeed>
		</gas>
	</ThingDef>
</Defs>