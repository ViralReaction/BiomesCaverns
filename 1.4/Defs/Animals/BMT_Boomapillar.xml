<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <ThingDef ParentName="BaseInsect">
	<defName>BMT_Boomapillar</defName>
	<label>boomapillar</label>
	<description>Borne out of the same genetic engineering research as the boomalope and boomasaurolophus, the boomapillar is just as explosive but much more buggy.</description>
	<statBases>
	  <MoveSpeed>3.4</MoveSpeed>
	  <MarketValue>350</MarketValue>
	  <ComfyTemperatureMin>-15</ComfyTemperatureMin>
	  <ComfyTemperatureMax>352.222</ComfyTemperatureMax>
	  <FilthRate>16</FilthRate>
	  <ToxicEnvironmentResistance MayRequire="Ludeon.RimWorld.Biotech">0.9</ToxicEnvironmentResistance>
	</statBases>
	<comps>
	  <li Class="CompProperties_EggLayer">
		<eggUnfertilizedDef>BMT_BoomapillarUnfertilized</eggUnfertilizedDef>
		<eggFertilizedDef>BMT_BoomapillarFertilized</eggFertilizedDef>
		<eggLayIntervalDays>2</eggLayIntervalDays>
		<eggCountRange>1~3</eggCountRange>
	  </li>
	  <li Class="CompProperties_Milkable">
		<milkDef>Chemfuel</milkDef>
		<milkIntervalDays>1</milkIntervalDays>
		<milkAmount>6</milkAmount>
		<milkFemaleOnly>false</milkFemaleOnly>
	  </li>
	</comps>
	<race>
		<!-- = -->
		<deathActionWorkerClass>DeathActionWorker_SmallExplosion</deathActionWorkerClass>
		<canBePredatorPrey>false</canBePredatorPrey>
		<body>BiomesCore_Snail</body>
		<baseHungerRate>0.22</baseHungerRate>
		<baseBodySize>0.4</baseBodySize>
		<baseHealthScale>0.4</baseHealthScale>
		<trainability>None</trainability>
		<roamMtbDays>3</roamMtbDays>
		<manhunterOnTameFailChance>0</manhunterOnTameFailChance>
		<manhunterOnDamageChance>0</manhunterOnDamageChance>
		<!-- <meatLabel>snail meat</meatLabel> -->
		<!-- <meatColor>(62,133,215)</meatColor> -->
		<leatherDef>BMT_Leather_Gastropoda</leatherDef>
		<!-- = -->
	  <useMeatFrom>Megaspider</useMeatFrom>
	  <bloodDef>Filth_BloodInsect</bloodDef>
	  <executionRange>6</executionRange>
	  <herdAnimal>false</herdAnimal>
	  <packAnimal>false</packAnimal>
	  <foodType>VegetarianRoughAnimal</foodType>
	  <wildness>0.6</wildness>
	  <gestationPeriodDays>6.66</gestationPeriodDays>
	  <lifeExpectancy>15</lifeExpectancy>
	  <lifeStageAges>
		<li>
			<def>AnimalBaby</def>
			<minAge>0</minAge>
		</li>
		<li>
			<def>AnimalJuvenile</def>
			<minAge>0.1</minAge>
		</li>
		<li>
			<def>AnimalAdult</def>
			<minAge>0.222</minAge>
			<soundWounded>Biomes_ChemSnail_Wounded</soundWounded>
			<soundDeath>Biomes_ChemSnail_Death</soundDeath>
			<soundCall>Biomes_ChemSnail_Call</soundCall>
			<soundAngry>Biomes_ChemSnail_Angry</soundAngry>
		</li>
	  </lifeStageAges>
	  <soundMeleeHitPawn>Pawn_Melee_BigBash_HitPawn</soundMeleeHitPawn>
	  <soundMeleeHitBuilding>Pawn_Melee_BigBash_HitBuilding</soundMeleeHitBuilding>
	  <soundMeleeMiss>Pawn_Melee_BigBash_Miss</soundMeleeMiss>
	</race>
	<tradeTags>
	  <li>AnimalUncommon</li>
	  <li>AnimalInsect</li>
	</tradeTags>
	<tools>
		<li>
			<label>head</label>
			<capacities>
				<li>Blunt</li>
			</capacities>
			<power>9</power>
			<cooldownTime>2.5</cooldownTime>
			<linkedBodyPartsGroup>HeadAttackTool</linkedBodyPartsGroup>
			<ensureLinkedBodyPartsGroupAlwaysUsable>true</ensureLinkedBodyPartsGroupAlwaysUsable>
		</li>
	</tools>
  </ThingDef>
  
