<Defs>

  <GenStepDef>
	<order>320</order>
	<defName>BMT_CrystalsGenerator</defName>
	<!-- Checks for the presence of the word "Crystal" in the biome defName -->
	<genStep Class="BMT.GenStep_ScatterCrystals">
	  <allowInWaterBiome>false</allowInWaterBiome>
	  <minSpacing>5</minSpacing>
	  <countPer10kCellsRange>15.0~30.0</countPer10kCellsRange>
	  <spotMustBeStandable>true</spotMustBeStandable>
	  <allowRoofed>true</allowRoofed>
	  <validators>
		<li Class="ScattererValidator_Buildable">
		  <radius>5</radius>
		  <affordance>Heavy</affordance>
		</li>
	  </validators>
	  <groups>
		<li>
		  <things>
			<BMT_Crystal_BlueSmall>0.1</BMT_Crystal_BlueSmall>
			<BMT_Crystal_BlueLarge>0.0833</BMT_Crystal_BlueLarge>
			<BMT_Crystal_BlueHuge>0.00833</BMT_Crystal_BlueHuge>
		  </things>
		  <indoorRuin>false</indoorRuin>
		  <coveredCellsPer10Cells>1.5~2.5</coveredCellsPer10Cells>
		  <clusterRectRadius>3~5</clusterRectRadius>
		</li>
		<li>
		  <things>
