<?xml version="1.0" encoding="utf-8" ?>
<Defs>
	<ThingDef ParentName="BMT_CaveBushBase">
		<defName>BMT_Ravelmush</defName>
		<label>ravelmush</label>
		<description>The Ravelmush is a strange mushroom...</description>
		<graphicData>
			<texPath>BMT_Caverns/Things/Plant/Ravelmush</texPath>
			<graphicClass>Graphic_Random</graphicClass>
		</graphicData>
		<statBases>
			<Nutrition>1.25</Nutrition>
		</statBases>
		<modExtensions>
			<li Class="BiomesCore.DefModExtensions.Biomes_PlantControl">
				<allowInCave>true</allowInCave>
				<allowInBuilding>true</allowInBuilding>
				<growingHours>0.5~0.99</growingHours>
			</li>
		</modExtensions>
		<specialDisplayRadius>6</specialDisplayRadius>
		<comps>
			<li Class="BiomesCore.CompProperties_CleanFilthAround">
				<tickRate>500</tickRate>
				<radius>6</radius>
			</li>
		</comps>
		<ingestible/>
		<plant>
			<fertilitySensitivity>0.5</fertilitySensitivity>
			<growDays>5</growDays>
			<fertilityMin>0.05</fertilityMin>
			<visualSizeRange>0.7~0.9</visualSizeRange>
			<topWindExposure>0.2</topWindExposure>
			<wildClusterRadius>8</wildClusterRadius>
			<wildClusterWeight>8</wildClusterWeight>
			<wildOrder>3</wildOrder>
			<wildEqualLocalDistribution>true</wildEqualLocalDistribution>
			<harvestTag>Standard</harvestTag>
			<harvestedThingDef>BMT_MushroomLog</harvestedThingDef>
			<harvestYield>2</harvestYield>
			<sowTags>
				<li>Ground</li>
			</sowTags>
			<cavePlant>false</cavePlant> <!-- false because biome specific spawning -->
		</plant>
		<selectable>true</selectable>
		<neverMultiSelect>false</neverMultiSelect>
	</ThingDef>
</Defs>