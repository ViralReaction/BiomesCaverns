<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<ThingDef ParentName="BMT_MyceliumBase">
		<modExtensions>
			<li Class="BiomesCore.DefModExtensions.Biomes_PlantControl">
				<terrainTags>
					<li>Water</li>
					<li>Shallow</li>
					<li>Boggy</li>
					<li>Soil</li>
					<li>Muddy</li>
					<li>Boggy</li>
				</terrainTags>
			</li>
		</modExtensions>
		<defName>BMT_Nogtyl_Mycelium</defName>
		<label>mycelium</label>
		<description>Mycelium.</description>
		<comps>
			<li Class="BiomesCore.CompProperties_ShootGrowth">
				<shootGrowthThingDef>BMT_Nogtyl</shootGrowthThingDef>
			</li>
		</comps>
		<plant>
			<wildClusterRadius>3</wildClusterRadius>
			<wildClusterWeight>1000</wildClusterWeight>
		</plant>
	</ThingDef>

	<ThingDef ParentName="TreeBase">
		<modExtensions>
			<li Class="BiomesCore.DefModExtensions.Biomes_PlantControl">
				<terrainTags>
					<li>Water</li>
					<li>Shallow</li>
					<li>Boggy</li>
					<li>Soil</li>
					<li>Muddy</li>
					<li>Boggy</li>
				</terrainTags>
			</li>
		</modExtensions>
		<defName>BMT_Nogtyl</defName>
		<label>nogtyl</label>
		<description>A strong wooden mushroom tree. Fast-growing, but doesn't yeild much usable material.</description>
		<graphicData>
			<texPath>BMT_Caverns/Things/Plant/Nogtyl</texPath>
			<graphicClass>Graphic_Random</graphicClass>
			<shadowData>
				<volume>(0.2, 0.35, 0.13)</volume>
				<offset>(0,0,-0.42)</offset>
			</shadowData>
		</graphicData>
		<passability>PassThroughOnly</passability>
		<pathCost>42</pathCost>
		<blockWind>true</blockWind>
		<statBases>
			<Beauty>2</Beauty>
			<Flammability>0.8</Flammability>
			<MaxHitPoints>200</MaxHitPoints>
			<Nutrition>2.0</Nutrition>
			<Mass>150</Mass>
		</statBases>
		<altitudeLayer>Building</altitudeLayer>
		<selectable>true</selectable>
		<fillPercent>0.25</fillPercent>
		<minifiedDef>MinifiedTree</minifiedDef>
		<rotatable>false</rotatable>
		<ingestible>
			<foodType>Tree</foodType>
			<preferability>RawBad</preferability>
		</ingestible>
		<plant>
			<lifespanDaysPerGrowDays>9</lifespanDaysPerGrowDays>
			<fertilitySensitivity>0.5</fertilitySensitivity>
			<soundHarvesting>Harvest_Tree</soundHarvesting>
			<soundHarvestFinish>Harvest_Tree_Finish</soundHarvestFinish>
			<sowWork>4000</sowWork>
			<sowMinSkill>6</sowMinSkill>
			<sowResearchPrerequisites>
				<li>TreeSowing</li>
			</sowResearchPrerequisites>
			<mustBeWildToSow>true</mustBeWildToSow>
			<wildClusterRadius>4</wildClusterRadius>
			<wildClusterWeight>10</wildClusterWeight>
			<growDays>7</growDays>
			<dieIfLeafless>false</dieIfLeafless>
			<harvestWork>500</harvestWork>
			<harvestYield>20</harvestYield>
			<wildOrder>1</wildOrder>
			<neverBlightable>true</neverBlightable>
			<harvestedThingDef>WoodLog</harvestedThingDef>
			<harvestMinGrowth>0.40</harvestMinGrowth>
			<harvestFailable>false</harvestFailable>
			<blockAdjacentSow>true</blockAdjacentSow>
			<treeLoversCareIfChopped>true</treeLoversCareIfChopped>
			<treeCategory>Full</treeCategory>
			<sowTags>
				<li>Ground</li>
			</sowTags>
			<growMinGlow>0</growMinGlow>
			<growOptimalGlow>0</growOptimalGlow>
			<cavePlant>true</cavePlant>
			<interferesWithRoof>false</interferesWithRoof>
			<harvestTag>Wood</harvestTag>
			<visualSizeRange>1.5~2.5</visualSizeRange>
			<topWindExposure>0.25</topWindExposure>
			<smashedThingDef>BMT_Nogtyl_Mycelium</smashedThingDef>
			<choppedThingDef>BMT_Nogtyl_Mycelium</choppedThingDef>
		</plant>
	</ThingDef>

</Defs>